@HEADER@
Group:		System/YaST
License:	GPL-2.0
BuildRequires:	gcc-c++ libtool
BuildRequires:	docbook-xsl-stylesheets doxygen libxslt perl-XML-Writer sgml-skel update-desktop-files
BuildRequires:	libstorage-devel >= 2.24.0 yast2 >= 2.19.4 yast2-devtools yast2-core-devel >= 2.23.1
BuildRequires:	yast2-testsuite >= 2.19.0
BuildRequires:	rubygem-ruby-dbus
BuildRequires:	libstorage-ruby >= 2.24.2
Requires:	libstorage4 >= 2.24.2
Requires:	libstorage-ruby >= 2.24.2
Requires:	yast2-core >= 2.18.3 yast2 >= 2.19.4 yast2-libyui >= 2.18.7
Requires:	rubygem-ruby-dbus
%ifarch s390 s390x
